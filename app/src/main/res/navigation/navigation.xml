<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root"
    app:startDestination="@+id/titleFragment">
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.github.karstens.langlab.TitleFragment"
        android:label="@string/android_app_name"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_addPackageFragment"
            app:destination="@id/addPackageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/addPackageFragment"
        android:name="com.github.karstens.langlab.AddPackageFragment"
        android:label="@string/android_app_name"
        tools:layout="@layout/fragment_add_package">
    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.github.karstens.langlab.HelpFragment"
        android:label="@string/title_langlab_help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.github.karstens.langlab.AboutFragment"
        android:label="@string/title_about_trivia"
        tools:layout="@layout/fragment_about" />
</navigation>